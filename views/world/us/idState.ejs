<% include ../../partials/header %>
<div style="color:white;">
    <div style="background-image: url('<%- state.image.image_state %>'); width: 100%;height: 430px; background-repeat: no-repeat;
    background-size: 100% 100%; position:relative;">
        <div class="text-center">
            <h1><%= state.state %></h1>
            <div>
                <img src=" <%=state.image.image_flag %>" style="width:100px; height:100px;">
            </div>
            <a class="btn btn-primary btn-large" style="margin-top: 15px" href="/us/<%= state._id %>/newposts">Add New Post</a>
        
        </div>
    
        <p class="pull-right" style="background:black;color:white; position:relative; right:22px; bottom:-200px;"><b>Location: </b><%= state.image.location %></p>
    </div>
    
</div>

<div class="container">
    <div class="row text-center">

    

    
    <% state.posts.forEach(function(comment){ %>
    
    <% if(comment.length === 0){ %>
        <p style="color:white;">no posts yet! not work! </p>
    <% } else { %>
    
            <div class="col-md-3 col-sm-6">
              <h2>City: <%= comment.city %> </h2>
              <p><bold>BY: </bold> 
              <%= comment.author.username %></p>
              <%= comment.author.name %></p>
              <% if(comment.author.picture){ %>
                  <img src="<%= comment.author.picture %>" style="width:50px; height:50px;">
              <% } %>
              <% if(comment.author.Localpicture){ %>
                  <img src="<%= comment.author.Localpicture %>" style="width:50px; height:50px;">
              <% } %>
              <img class="img-responsive" src="<%= comment.image %>">
              <p>$<%= comment.price %></p>
              <p><a class="btn btn-primary" href="/us/<%= state._id %>/newposts/<%= comment._id %> " role="button">More Info &raquo;</a></p>
            </div>
    <% } %>
    <% }) %>
    </div>
</div>

<% include ../../partials/footer %>