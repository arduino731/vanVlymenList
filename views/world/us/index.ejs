    <div class="container">
      <div class="jumbotron">
          <a href="/campgrounds" class="btn btn-lg btn-primary" style="margin: -20px -50px;position: relative;left: 48%;" >View All Lists </a>
        <h1 class="text-center">list of U.S.</h1>
        <p>coming soon list</p>
        <p>
            <a class="btn btn-primary btn-large" href="/us/new">Add New Post a Image</a>
        </p>
      </div>
      
        <% allUs.forEach(function(us){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <div class="caption">
                       <h4><%= us.state %></h4>
                       <p>$<%= us.price %></p>
                       <p><b>Posted: </b> <%= us.date.toDateString() %></p>
                       
                   </div>
                   <div style="background-color:yellow;">
                       <img src=" <%= us.image %> " style="width:100px; height:100px; display:block; margin:auto;">
                   </div>
                       <a href="/campgrounds/<%= us._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }); %>
    </div><!-- /.container -->


